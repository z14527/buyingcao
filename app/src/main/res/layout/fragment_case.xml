<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="5dip">
        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="fill_parent"
            android:background="#ffcc66"
            android:layout_height="fill_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/case_number_text"
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:layout_marginLeft="5dip"
                android:gravity="center_vertical"
                android:text="申请号："
                android:textColor="#222222"
                android:textSize="18dip">
            </TextView>
            <EditText
                android:id="@+id/case_number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dip"
                android:hint="请输入专利申请号"
                android:singleLine="true"
                android:text="">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffcc66"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/case_date_text"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_marginLeft="5dip"
                android:gravity="center_vertical"
                android:text="申请日："
                android:textColor="#222222"
                android:textSize="18dip">
            </TextView>
            <EditText
                android:id="@+id/case_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="请输入专利申请日期（xxxx-x-xx)"
                android:singleLine="true"
                android:text="">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayout03"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffcc66"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/case_class_text"
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:layout_marginLeft="5dip"
                android:gravity="center_vertical"
                android:text="分类号："
                android:textColor="#222222"
                android:textSize="18dip">
            </TextView>
            <EditText
                android:id="@+id/case_class"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="请输入专利分类号（多个用英文逗号,分开)"
                android:singleLine="true"
                android:text="">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayout04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/case_history"
                android:layout_width="150dip"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="历史"
                android:textSize="18dip">
            </Button>
            <Button
                android:id="@+id/case_import"
                android:layout_width="150dip"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="著录项目导入"
                android:textSize="18dip">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayout07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/case_ok"
                android:layout_width="150dip"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="保存"
                android:textSize="18dip">
            </Button>
            <Button
                android:id="@+id/case_clear"
                android:layout_width="150dip"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text=" 清空 "
                android:textSize="18dip">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayout09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/case_exec"
                android:layout_width="150dip"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text=" 执行命令 "
                android:textSize="18dip">
            </Button>
            <Button
                android:id="@+id/case_get_file"
                android:layout_width="150dip"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="下载指定文件"
                android:textSize="18dip">
            </Button>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayout06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/case_set_account_sx"
                android:layout_width="150dip"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="设置审限账号"
                android:textSize="18dip">
            </Button>           <Button
                android:id="@+id/case_get_real_sx"
                android:layout_width="150dip"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="下载实时审限"
                android:textSize="18dip">
            </Button>

         </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayout010"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/case_get_exam"
                android:layout_width="150dip"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="下载审查案卷"
                android:textSize="18dip">
            </Button>
            <Button
                android:id="@+id/case_reset_ea"
                android:layout_width="150dip"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="重启远程服务"
                android:textSize="18dip">
            </Button>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/LinearLayout08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <Button
                android:id="@+id/case_zlfx"
                android:layout_width="150dip"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="专利分析"
                android:textSize="18dip">
            </Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>